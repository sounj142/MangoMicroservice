<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a class="nav-link" href="javascript:void(0)">Hello @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Account">
                <button class="nav-link nav-login-btn" type="submit">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>